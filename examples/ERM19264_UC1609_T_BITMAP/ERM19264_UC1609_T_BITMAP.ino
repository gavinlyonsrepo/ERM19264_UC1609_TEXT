void setup()
{
  mylcd.LCDbegin(VbiasPOT, AddressSet);     // initialize the LCD
  mylcd.LCDFillScreen(0x5E, 0); // fill screen with pattern
  delay(2000);
}

void loop()
{
  while (1)
  {
    mylcd.LCDBitmap(0, 0 , 192, 64, fullscreenBitmap);
    delay(5000);

    mylcd.LCDFillScreen(0x00, 0); // Clears screen
    delay(1000);

    mylcd.LCDBitmap(50, 30 , 20, 20, smallImage);
    delay(5000);

    mylcd.LCDFillScreen(0x00, 0); // Clears screen
    delay(1000);
  }
}

